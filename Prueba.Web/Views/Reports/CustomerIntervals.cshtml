@{
    ViewData["Title"] = "Customer Interval Report";
}

<div class="row">
    <div class="col-lg-8 col-xl-7">

        <div class="d-flex align-items-center justify-content-between mb-3">
            <h1 class="h3 m-0">Customer Interval Report</h1>
            <a class="btn btn-outline-secondary" asp-controller="Orders" asp-action="Index">Back to Orders</a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <p class="text-muted mb-3">
                    This downloads the Excel report generated by the API.
                </p>

                <a class="btn btn-success"
                   asp-controller="Reports"
                   asp-action="CustomerIntervalsExcel">
                    Download Excel
                </a>
            </div>
        </div>

    </div>
</div>
